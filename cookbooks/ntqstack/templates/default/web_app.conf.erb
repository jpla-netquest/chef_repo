<VirtualHost *:<%= @params[:server_port] || node['apache']['listen_ports'].first %>>
  ServerName <%= @params[:server_name] %>
  <% if @params[:server_aliases] -%>
  ServerAlias <%= @params[:server_aliases].join " " %>
  <% end -%>
  ServerAdmin <%= @params[:server_admin] %>
  ## vhost document root
  DocumentRoot <%= @params[:docroot] %>

  <Directory />
    Options <%= [@params[:directory_options] || "FollowSymLinks" ].flatten.join " " %>
    AllowOverride None
    Order allow,deny
    Allow from all
  <% if node['apache']['version'] == '2.4' -%>
    Require local
  <% end -%>
  </Directory>
  ## Logging
  ErrorLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-error.log
  LogLevel <%= node['ntqstack']['loglevel' %>
  ServerSignature <%= node['ntqstack']['srv_signature %>
  CustomLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-access.log "logstash_ext_balancer_json" env=!dontlog

  ## Proxy rules
  ProxyRequests <%= node['apache']['proxy_requests'] %>
  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>

  ProxyPass /my-webapp balancer://local/my-webapp
  ProxyPassReverse

</VirtualHost>
